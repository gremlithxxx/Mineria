    {
      "cell_type": "code",
      "source": [
        "import pandas as pd\n",
        "import numpy as np\n",
        "import matplotlib.pyplot as plt\n",
        "import seaborn as sns\n",
        "from sklearn.model_selection import train_test_split\n",
        "from sklearn.linear_model import LogisticRegression\n",
        "from sklearn.metrics import classification_report, confusion_matrix, roc_curve, roc_auc_score\n",
        "import os\n",
        "\n",
        "# Descargar el dataset\n",
        "import kagglehub\n",
        "path = kagglehub.dataset_download(\"bhanupratapbiswas/fashion-products\")\n",
        "print(\"Path to dataset files:\", path)\n",
        "\n",
        "# Encontrar y cargar el archivo CSV\n",
        "csv_files = [f for f in os.listdir(path) if f.endswith('.csv')]\n",
        "print(f\"Archivos CSV encontrados: {csv_files}\")\n",
        "\n",
        "# Cargar el primer archivo CSV\n",
        "if csv_files:\n",
        "    df = pd.read_csv(os.path.join(path, csv_files[0]))\n",
        "    print(\"\\nPrimeras filas del dataset:\")\n",
        "    print(df.head())\n",
        "\n",
        "    print(\"\\nInformación del dataset:\")\n",
        "    print(df.info())\n",
        "\n",
        "    print(\"\\nColumnas disponibles:\")\n",
        "    print(df.columns.tolist())\n",
        "\n",
        "    # Identificar columnas categóricas binarias y continuas\n",
        "    # Nota: Esto puede variar según el dataset real\n",
        "    # Vamos a buscar columnas que podrían ser útiles\n",
        "\n",
        "    # Mostrar valores únicos para columnas categóricas potenciales\n",
        "    categorical_cols = df.select_dtypes(include=['object']).columns\n",
        "    for col in categorical_cols:\n",
        "        print(f\"\\nValores únicos en {col}: {df[col].unique()[:5]}\")\n",
        "\n",
        "    # Ejemplo de análisis (ajusta según las columnas reales del dataset)\n",
        "    # Supongamos que queremos predecir 'season' (categórica) basado en 'price' (continua)\n",
        "\n",
        "    # Para este ejemplo, necesitamos identificar:\n",
        "    # 1. Una columna binaria (o convertible a binaria)\n",
        "    # 2. Una columna numérica continua\n",
        "\n",
        "    # Crear variable binaria de ejemplo si no existe\n",
        "    # Por ejemplo, si hay una columna 'season', podríamos hacer binaria 'is_winter'\n",
        "\n",
        "    # Aquí va el análisis principal - ajusta según las columnas que encuentres\n",
        "    if 'season' in df.columns and 'price' in df.columns:\n",
        "        # Crear variable binaria: es invierno o no\n",
        "        df['is_winter'] = (df['season'] == 'Winter').astype(int)\n",
        "\n",
        "        # Análisis de regresión logística\n",
        "        X = df[['price']].dropna()\n",
        "        y = df.loc[X.index, 'is_winter']\n",
        "\n",
        "        # Dividir datos\n",
        "        X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.3, random_state=42)\n",
        "\n",
        "        # Crear y entrenar modelo\n",
        "        model = LogisticRegression()\n",
        "        model.fit(X_train, y_train)\n",
        "\n",
        "        # Predicciones\n",
        "        y_pred = model.predict(X_test)\n",
        "        y_pred_proba = model.predict_proba(X_test)[:, 1]\n",
        "\n",
        "        # Evaluación\n",
        "        print(\"\\n\" + \"=\"*50)\n",
        "        print(\"RESULTADOS DE REGRESIÓN LOGÍSTICA\")\n",
        "        print(\"=\"*50)\n",
        "        print(f\"Coeficiente: {model.coef_[0][0]:.4f}\")\n",
        "        print(f\"Intercepto: {model.intercept_[0]:.4f}\")\n",
        "        print(f\"Precisión del modelo: {model.score(X_test, y_test):.4f}\")\n",
        "\n",
        "        print(\"\\nReporte de clasificación:\")\n",
        "        print(classification_report(y_test, y_pred))\n",
        "\n",
        "        print(\"\\nMatriz de confusión:\")\n",
        "        print(confusion_matrix(y_test, y_pred))\n",
        "\n",
        "        # Visualizaciones\n",
        "        fig, axes = plt.subplots(1, 3, figsize=(15, 5))\n",
        "\n",
        "        # 1. Distribución de precios por categoría\n",
        "        axes[0].hist([df[df['is_winter']==0]['price'].dropna(),\n",
        "                      df[df['is_winter']==1]['price'].dropna()],\n",
        "                     label=['No invierno', 'Invierno'], alpha=0.7, bins=30)\n",
        "        axes[0].set_xlabel('Precio')\n",
        "        axes[0].set_ylabel('Frecuencia')\n",
        "        axes[0].set_title('Distribución de Precios por Categoría')\n",
        "        axes[0].legend()\n",
        "\n",
        "        # 2. Curva sigmoide\n",
        "        X_range = np.linspace(X.min(), X.max(), 300).reshape(-1, 1)\n",
        "        y_proba = model.predict_proba(X_range)[:, 1]\n",
        "\n",
        "        axes[1].plot(X_range, y_proba, 'b-', linewidth=2)\n",
        "        axes[1].scatter(X_test, y_pred_proba, c=y_test, cmap='coolwarm', alpha=0.6, s=50)\n",
        "        axes[1].axhline(y=0.5, color='gray', linestyle='--', alpha=0.7)\n",
        "        axes[1].set_xlabel('Precio')\n",
        "        axes[1].set_ylabel('Probabilidad de ser invierno')\n",
        "        axes[1].set_title('Curva de Regresión Logística')\n",
        "\n",
        "        # 3. Matriz de confusión\n",
        "        cm = confusion_matrix(y_test, y_pred)\n",
        "        sns.heatmap(cm, annot=True, fmt='d', cmap='Blues', ax=axes[2])\n",
        "        axes[2].set_xlabel('Predicho')\n",
        "        axes[2].set_ylabel('Real')\n",
        "        axes[2].set_title('Matriz de Confusión')\n",
        "\n",
        "        plt.tight_layout()\n",
        "        plt.show()\n",
        "\n",
        "        # Curva ROC\n",
        "        fpr, tpr, thresholds = roc_curve(y_test, y_pred_proba)\n",
        "        auc_score = roc_auc_score(y_test, y_pred_proba)\n",
        "\n",
        "        plt.figure(figsize=(8, 6))\n",
        "        plt.plot(fpr, tpr, 'b-', label=f'ROC (AUC = {auc_score:.3f})')\n",
        "        plt.plot([0, 1], [0, 1], 'r--', label='Clasificador aleatorio')\n",
        "        plt.xlabel('Tasa de Falsos Positivos')\n",
        "        plt.ylabel('Tasa de Verdaderos Positivos')\n",
        "        plt.title('Curva ROC')\n",
        "        plt.legend()\n",
        "        plt.grid(True, alpha=0.3)\n",
        "        plt.show()\n",
        "\n",
        "    else:\n",
        "        print(\"\\n\" + \"=\"*50)\n",
        "        print(\"ANÁLISIS ALTERNATIVO\")\n",
        "        print(\"=\"*50)\n",
        "        print(\"Las columnas específicas no están disponibles.\")\n",
        "        print(\"Aquí tienes las columnas que puedes usar para tu análisis:\")\n",
        "\n",
        "        # Identificar columnas numéricas y categóricas\n",
        "        numeric_cols = df.select_dtypes(include=[np.number]).columns.tolist()\n",
        "        categorical_cols = df.select_dtypes(include=['object']).columns.tolist()\n",
        "\n",
        "        print(f\"\\nColumnas numéricas disponibles: {numeric_cols}\")\n",
        "        print(f\"Columnas categóricas disponibles: {categorical_cols}\")\n",
        "\n",
        "        print(\"\\nSugerencias para análisis:\")\n",
        "        print(\"1. Elige una columna categórica con 2 categorías (o hazla binaria)\")\n",
        "        print(\"2. Elige una columna numérica continua\")\n",
        "        print(\"3. Ejecuta el análisis con esas columnas\")\n",
        "\n",
        "        # Mostrar valores únicos en columnas categóricas\n",
        "        for col in categorical_cols[:3]:  # Mostrar primeras 3\n",
        "            print(f\"\\nValores en {col}: {df[col].value_counts().head()}\")\n",
        "\n",
        "else:\n",
        "    print(\"No se encontraron archivos CSV en el dataset\")"
      ],
